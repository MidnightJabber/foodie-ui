{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },

  "extends": [
    "airbnb"
  ],

  "parserOptions": {
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
    "sourceType": "module"
  },

  "plugins": [
    "react"
  ],

  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src", "src/assets"]
      },
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
